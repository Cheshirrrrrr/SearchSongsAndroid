<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.ifmo.android_2015.search_song" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity android:name="ru.ifmo.android_2015.search_song.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="ru.ifmo.android_2015.search_song.SingerSelectedActivity"/>
        <activity android:name="ru.ifmo.android_2015.search_song.SongSelectedActivity"/>
        <activity android:name="ru.ifmo.android_2015.search_song.AlbumSelectedActivity"/>
        <activity android:name="ru.ifmo.android_2015.search_song.TextSelectedActivity"/>
    </application>

</manifest>
